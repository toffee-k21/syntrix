<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Auth</title>

  <style>
    :root {
      --bg: #070a10;
      --surface: #0c111b;
      --surface2: #0f1623;

      --border: rgba(255, 255, 255, 0.08);
      --shadow: 0 18px 60px rgba(0, 0, 0, 0.55);

      --text: rgba(255, 255, 255, 0.92);
      --muted: rgba(255, 255, 255, 0.58);
      --muted2: rgba(255, 255, 255, 0.36);

      --accent: #5b8cff;
      --accent2: #2f6bff;

      --green: #2ee59d;
      --red: #ff5c5c;

      --radius: 18px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
    }

    body {
      min-height: 100vh;
      color: var(--text);
      background:
        radial-gradient(900px 500px at 15% 10%, rgba(91, 140, 255, 0.12), transparent 55%),
        radial-gradient(900px 500px at 85% 35%, rgba(46, 229, 157, 0.06), transparent 60%),
        var(--bg);
      display: grid;
      place-items: center;
      padding: 26px;
    }

    .wrap {
      width: min(1040px, 100%);
      display: grid;
      grid-template-columns: 1fr 440px;
      gap: 16px;
      align-items: stretch;
    }

    .card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
    }

    /* Left panel */
    .left {
      padding: 26px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 18px;
      background: var(--surface2);
    }

    .brand {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }

    .brand-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      display: grid;
      place-items: center;
      font-weight: 950;
      letter-spacing: 0.4px;
      background: linear-gradient(135deg, rgba(91, 140, 255, 1), rgba(47, 107, 255, 0.35));
      border: 1px solid rgba(91, 140, 255, 0.35);
      box-shadow: 0 18px 50px rgba(91, 140, 255, 0.18);
    }

    .brand-title h1 {
      font-size: 14px;
      font-weight: 900;
      letter-spacing: 0.2px;
    }

    .brand-title p {
      font-size: 12px;
      color: var(--muted);
      margin-top: 2px;
    }

    .tag {
      font-size: 12px;
      font-weight: 800;
      color: rgba(255, 255, 255, 0.75);
      padding: 8px 12px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.10);
      background: rgba(255, 255, 255, 0.03);
      user-select: none;
    }

    .hero h2 {
      font-size: 40px;
      font-weight: 950;
      letter-spacing: -1px;
      line-height: 1.05;
      margin-top: 14px;
    }

    .hero p {
      margin-top: 12px;
      font-size: 14px;
      color: var(--muted);
      line-height: 1.7;
      max-width: 420px;
    }

    .left-footer {
      display: flex;
      flex-direction: column;
      gap: 10px;
      color: var(--muted2);
      font-size: 12px;
    }

    .left-footer code {
      color: rgba(255, 255, 255, 0.75);
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.06);
      padding: 8px 10px;
      border-radius: 14px;
      display: inline-block;
      width: fit-content;
    }

    /* Right panel */
    .right {
      padding: 18px;
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .tabs {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      padding: 10px;
      border-radius: 16px;
      background: rgba(0, 0, 0, 0.25);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .tab {
      border: 1px solid transparent;
      background: transparent;
      color: var(--muted);
      padding: 12px 12px;
      border-radius: 14px;
      cursor: pointer;
      font-weight: 900;
      transition: 0.2s ease;
    }

    .tab:hover {
      color: var(--text);
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .tab.active {
      background: rgba(91, 140, 255, 0.10);
      border: 1px solid rgba(91, 140, 255, 0.25);
      color: var(--text);
    }

    .msg {
      padding: 12px 14px;
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      background: rgba(255, 255, 255, 0.03);
      color: var(--muted);
      font-size: 13px;
      line-height: 1.5;
      display: none;
    }

    .msg.success {
      display: block;
      border-color: rgba(46, 229, 157, 0.30);
      background: rgba(46, 229, 157, 0.06);
      color: rgba(46, 229, 157, 0.95);
    }

    .msg.error {
      display: block;
      border-color: rgba(255, 92, 92, 0.30);
      background: rgba(255, 92, 92, 0.06);
      color: rgba(255, 92, 92, 0.95);
    }

    .form {
      padding: 16px;
      border-radius: 16px;
      background: rgba(0, 0, 0, 0.25);
      border: 1px solid rgba(255, 255, 255, 0.08);
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .form h3 {
      font-size: 16px;
      font-weight: 950;
      letter-spacing: -0.2px;
    }

    .form p {
      font-size: 13px;
      color: var(--muted);
      margin-top: -6px;
    }

    .field {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    label {
      font-size: 12px;
      font-weight: 800;
      color: var(--muted);
    }

    input {
      width: 100%;
      padding: 12px 14px;
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      background: rgba(0, 0, 0, 0.28);
      color: var(--text);
      outline: none;
      font-size: 14px;
    }

    input::placeholder {
      color: var(--muted2);
    }

    .btn {
      border: 1px solid rgba(255, 255, 255, 0.10);
      background: rgba(255, 255, 255, 0.04);
      color: var(--text);
      padding: 12px 14px;
      border-radius: 16px;
      cursor: pointer;
      font-weight: 950;
      transition: 0.2s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .btn:hover {
      transform: translateY(-1px);
      background: rgba(255, 255, 255, 0.06);
    }

    .btn.primary {
      background: linear-gradient(135deg, rgba(91, 140, 255, 1), rgba(47, 107, 255, 0.55));
      border: 1px solid rgba(91, 140, 255, 0.35);
    }

    .mini {
      color: var(--muted2);
      font-size: 12px;
      text-align: center;
    }

    @media (max-width: 980px) {
      .wrap { grid-template-columns: 1fr; }
      .hero h2 { font-size: 32px; }
    }
  </style>
</head>

<body>
  <div class="wrap">

    <!-- LEFT -->
    <section class="card left">
      <div>
        <div class="brand">
          <div class="brand-left">
            <div class="logo">V</div>
            <div class="brand-title">
              <h1>Velyx Auth</h1>
              <p>Minimal sign in system</p>
            </div>
          </div>
          <div class="tag">Secure</div>
        </div>

        <div class="hero">
          <h2>Sign in.<br />Stay realtime.</h2>
          <p>
            Sign up or sign in. Your token will be stored in a cookie named
            <b>auth_token</b>.
          </p>
        </div>
      </div>

      <div class="left-footer">
        <div>API Base:</div>
        <code id="apiBaseText">/auth</code>
        <div>Redirect after login → <b>/</b></div>
      </div>
    </section>

    <!-- RIGHT -->
    <section class="card right">

      <div class="tabs">
        <button id="tabSignup" class="tab active" type="button">Sign up</button>
        <button id="tabSignin" class="tab" type="button">Sign in</button>
      </div>

      <div id="msgBox" class="msg"></div>

      <form id="authForm" class="form">
        <h3 id="formTitle">Create your account</h3>
        <p id="formDesc">Sign up using email + password.</p>

        <!-- SIGNUP -->
        <div id="signupFields" class="field">
          <label>Email</label>
          <input id="email" type="email" placeholder="you@example.com" autocomplete="email" />
        </div>

        <!-- PASSWORD -->
        <div class="field">
          <label>Password</label>
          <input id="password" type="password" placeholder="••••••••" autocomplete="current-password" />
        </div>

        <!-- SIGNIN -->
        <div id="signinFields" class="field" style="display:none;">
          <label>User ID</label>
          <input id="userId" type="text" placeholder="your-user-id" />
          <div style="color: var(--muted2); font-size: 12px; line-height: 1.4;">
            Your backend signin requires <b>userId + password</b>.
          </div>
        </div>

        <button id="submitBtn" class="btn primary" type="submit">
          Create account →
        </button>

        <button class="btn" type="button" onclick="logoutCookie()">
          Clear cookie
        </button>

        <div class="mini">
          Cookie is visible in browser (JS cookie), not HttpOnly.
        </div>
      </form>

    </section>
  </div>

  <script>
    const API_BASE = "/auth";

    const tabSignup = document.getElementById("tabSignup");
    const tabSignin = document.getElementById("tabSignin");

    const formTitle = document.getElementById("formTitle");
    const formDesc = document.getElementById("formDesc");

    const signupFields = document.getElementById("signupFields");
    const signinFields = document.getElementById("signinFields");

    const emailEl = document.getElementById("email");
    const userIdEl = document.getElementById("userId");
    const passwordEl = document.getElementById("password");

    const submitBtn = document.getElementById("submitBtn");
    const authForm = document.getElementById("authForm");

    const msgBox = document.getElementById("msgBox");

    document.getElementById("apiBaseText").textContent = API_BASE;

    let mode = "signup"; // signup | signin

    function setMessage(type, text) {
      msgBox.className = "msg";
      msgBox.textContent = "";

      if (!text) {
        msgBox.style.display = "none";
        return;
      }

      msgBox.style.display = "block";
      msgBox.classList.add(type);
      msgBox.textContent = text;
    }

    function setMode(nextMode) {
      mode = nextMode;
      setMessage("", "");

      if (mode === "signup") {
        tabSignup.classList.add("active");
        tabSignin.classList.remove("active");

        signupFields.style.display = "block";
        signinFields.style.display = "none";

        formTitle.textContent = "Create your account";
        formDesc.textContent = "Sign up using email + password.";
        submitBtn.textContent = "Create account →";

        emailEl.value = "";
        passwordEl.value = "";
        userIdEl.value = "";
      } else {
        tabSignin.classList.add("active");
        tabSignup.classList.remove("active");

        signupFields.style.display = "none";
        signinFields.style.display = "block";

        formTitle.textContent = "Welcome back";
        formDesc.textContent = "Sign in using userId + password.";
        submitBtn.textContent = "Sign in →";

        emailEl.value = "";
        passwordEl.value = "";
        userIdEl.value = "";
      }
    }

    tabSignup.addEventListener("click", () => setMode("signup"));
    tabSignin.addEventListener("click", () => setMode("signin"));

    async function postJSON(url, body) {
      const res = await fetch(url, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
      });

      let data = null;
      try {
        data = await res.json();
      } catch (e) {}

      return { res, data };
    }

    function setAuthCookie(token) {
      // 7 days cookie
      document.cookie = `auth_token=${token}; path=/; max-age=${7 * 24 * 60 * 60}`;
    }

    function logoutCookie() {
      document.cookie = "auth_token=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT";
      setMessage("success", "Cookie cleared.");
    }

    authForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      setMessage("", "");

      try {
        submitBtn.disabled = true;
        submitBtn.textContent = "Loading…";

        if (mode === "signup") {
          const email = emailEl.value.trim();
          const password = passwordEl.value.trim();

          if (!email || !password) {
            setMessage("error", "Email and password are required.");
            return;
          }

          const { res, data } = await postJSON(`${API_BASE}/signup`, { email, password });

          if (!res.ok) {
            setMessage("error", "Signup failed. Try again.");
            return;
          }

          // ✅ store token in cookie
          setAuthCookie(data.token);

          setMessage("success", "Account created. Redirecting…");
          setTimeout(() => window.location.href = "/", 600);

        } else {
          const userId = userIdEl.value.trim();
          const password = passwordEl.value.trim();

          if (!userId || !password) {
            setMessage("error", "User ID and password are required.");
            return;
          }

          const { res, data } = await postJSON(`${API_BASE}/signin`, { userId, password });

          if (res.status === 401) {
            setMessage("error", "Invalid credentials (401).");
            return;
          }

          if (!res.ok) {
            setMessage("error", "Signin failed. Try again.");
            return;
          }

          // ✅ store token in cookie
          setAuthCookie(data.token);

          setMessage("success", "Signed in. Redirecting…");
          setTimeout(() => window.location.href = "/", 600);
        }

      } catch (err) {
        setMessage("error", "Something went wrong. Check console.");
        console.error(err);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = mode === "signup" ? "Create account →" : "Sign in →";
      }
    });

    setMode("signup");
  </script>
</body>
</html>
