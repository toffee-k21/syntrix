<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cryon</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    :root {
      --bg: #070a10;
      --surface: #0c111b;
      --surface2: #0f1623;
      --border: rgba(255, 255, 255, 0.08);
      --shadow: 0 18px 60px rgba(0, 0, 0, 0.55);
      --text: rgba(255, 255, 255, 0.92);
      --muted: rgba(255, 255, 255, 0.58);
      --muted2: rgba(255, 255, 255, 0.36);
      --accent: #5b8cff;
      --green: #2ee59d;
      --red: #ff5c5c;
      --radius: 18px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
    }

    body {
      min-height: 100vh;
      color: var(--text);
      background:
        radial-gradient(900px 500px at 15% 10%, rgba(91, 140, 255, 0.12), transparent 55%),
        radial-gradient(900px 500px at 85% 35%, rgba(46, 229, 157, 0.06), transparent 60%),
        var(--bg);
      padding: 26px;
    }

    .wrap {
      width: min(1180px, 100%);
      margin: 0 auto;
      display: grid;
      grid-template-columns: 360px 1fr;
      gap: 16px;
    }

    .card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
    }

    /* LEFT SIDEBAR */
    .left {
      padding: 22px;
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    .brand {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .brand-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      display: grid;
      place-items: center;
      font-weight: 950;
      background: linear-gradient(135deg, #5b8cff, #2f6bff);
    }

    .brand-title h1 {
      font-size: 14px;
      font-weight: 900;
    }

    .brand-title p {
      font-size: 12px;
      color: var(--muted);
    }

    .tag {
      font-size: 12px;
      font-weight: 800;
      padding: 6px 12px;
      border-radius: 999px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.1);
    }

    .headline {
      font-size: 42px;
      font-weight: 950;
      line-height: 1.05;
    }

    .subtext {
      font-size: 14px;
      color: var(--muted);
      line-height: 1.6;
      max-width: 300px;
    }

    .divider {
      height: 1px;
      background: rgba(255,255,255,0.06);
    }

    .btn {
      border: 1px solid rgba(255,255,255,0.1);
      background: rgba(255,255,255,0.04);
      color: var(--text);
      padding: 12px 14px;
      border-radius: 16px;
      cursor: pointer;
      font-weight: 900;
      transition: 0.2s;
      width: 100%;
    }

    .btn:hover {
      transform: translateY(-1px);
      background: rgba(255,255,255,0.06);
    }

    .btn.primary {
      background: linear-gradient(135deg, #5b8cff, #2f6bff);
    }

    .hint {
      font-size: 13px;
      color: var(--muted2);
    }

    .left-footer {
      margin-top: auto;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    /* RIGHT */
    .right {
      padding: 16px;
      display: grid;
      grid-template-rows: auto auto 1fr;
      gap: 14px;
      background: var(--surface2);
    }

    .controls {
      display: flex;
      gap: 12px;
      padding: 14px;
      background: var(--surface);
      border-radius: var(--radius);
    }

    .search {
      flex: 1;
      padding: 12px;
      border-radius: 16px;
      background: rgba(0,0,0,0.3);
      border: 1px solid rgba(255,255,255,0.08);
    }

    .search input {
      width: 100%;
      border: none;
      outline: none;
      background: transparent;
      color: var(--text);
    }

    .select {
      padding: 12px;
      border-radius: 16px;
      background: rgba(0,0,0,0.3);
      border: 1px solid rgba(255,255,255,0.08);
      color: var(--text);
      font-weight: 800;
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(3,1fr);
      gap: 12px;
    }

    .stat {
      padding: 14px;
      background: var(--surface);
      border-radius: 16px;
    }

    .stat p {
      font-size: 12px;
      color: var(--muted);
    }

    .stat h3 {
      font-size: 16px;
      font-weight: 900;
    }

    .chart-card {
      padding: 16px;
      background: var(--surface);
      border-radius: 18px;
    }

    canvas {
      height: 420px !important;
    }

    @media (max-width: 980px) {
      .wrap { grid-template-columns: 1fr; }
    }
  </style>
</head>

<body>
<div class="wrap">

  <!-- LEFT -->
  <section class="card left">
    <div class="brand">
      <div class="brand-left">
        <div class="logo">C</div>
        <div class="brand-title">
          <h1>Cryon</h1>
          <p>Minimal crypto dashboard</p>
        </div>
      </div>
      <div class="tag">Live</div>
    </div>

    <div class="headline">Cryon</div>

    <p class="subtext">
      Track crypto prices in real time.
      Create alerts. Stay ahead.
    </p>

    <div class="divider"></div>

    <button class="btn primary" onclick="goToWatchlist()">
      Open Watchlist →
    </button>

    <p class="hint">
      Manage alerts & monitor your favorite coins.
    </p>

    <div class="left-footer">
      <div class="divider"></div>
      <div class="hint">Ctrl + K to search</div>
    </div>
  </section>

  <!-- RIGHT -->
  <section class="card right">
    <div class="controls">
      <div class="search">
        <input placeholder="Search crypto..." />
      </div>
      <select id="symbol" class="select">
        <option value="BTC">Bitcoin (BTC)</option>
        <option value="ETH">Ethereum (ETH)</option>
      </select>
    </div>

    <div class="stats">
      <div class="stat"><p>Selected</p><h3 id="selectedCoin">BTC</h3></div>
      <div class="stat"><p>Price</p><h3 id="latestPrice">$ —</h3></div>
      <div class="stat"><p>Status</p><h3 id="statusText">Connecting…</h3></div>
    </div>

    <div class="chart-card">
      <canvas id="lineChart"></canvas>
    </div>
  </section>
</div>

<script>
  const apiKey = "<%= apiKey %>";

  function getToken() {
    return document.cookie
      .split("; ")
      .find(row => row.startsWith("auth_token="))
      ?.split("=")[1] || null;
  }

  function goToWatchlist() {
    if (!getToken()) {
      window.location.href = "/signin";
    } else {
      window.location.href = "/watchlist-ui";
    }
  }
</script>
</body>
</html>
